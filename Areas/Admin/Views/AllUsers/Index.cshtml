@model IEnumerable<UserVM>
@{
    ViewData["Title"] = "Index";
}

    <h2>All Users</h2>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">
                    <a class="btn btn-success" <a asp-area="../Admin" asp-controller="UserAccount" asp-action="Register">Create User</a>
                </p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>User name</th>
                                <th>Fullname</th>
                                <th>Email</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserVM user in Model)
                            {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Fullname</td>
                                <td>@user.Email</td>
                                <td><label class="badge badge-danger">@user.Role</label></td>
                                <td>
                                    <a asp-action="Edit" asp-route-email="@user.Email" class="btn btn-primary">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-email="@user.Email" class="btn btn-danger">
                                        <i class="mdi mdi-delete-variant"></i>
                                    </a>
                                </td>
                                
                            </tr>
                             }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>